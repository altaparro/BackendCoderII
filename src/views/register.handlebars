        .headerRegistrarse {
            background: rgb(35, 36, 36);
            color: #ffffff;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 60px;
        }

        .anclaLogo {
            text-decoration: none;
            color: #ffffff;
            font-weight: 700;
            font-size: 18px;
            transition: color 0.3s, border-bottom 0.3s;
        }

        .anclaLogo:hover {
            color: rgba(193, 255, 114, 0.87);
            border-bottom: 2px solid rgba(12, 192, 223, 0.87);
        }

        .seccionRegistrarse {
            background-color: rgb(36, 36, 36);
            width: 100%;
            max-width: 500px;
            margin: 20px auto;
            border-radius: 10px;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .tituloRegistrarse {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .form-group {
