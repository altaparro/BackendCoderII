            outline: none;
        }

        input::placeholder {
            color: #aaa;
        }

        .boton {
            width: 100%;
            background-color: rgba(12, 192, 223, 0.87);
            border: none;
            color: #ffffff;
            padding: 12px;
            border-radius: 5px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

        .boton:hover {
            background-color: rgba(12, 192, 223, 1);
            color: #ffffff;
        }
    </style>
